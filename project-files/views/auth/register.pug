doctype html
head
  meta(charset='utf-8')
  title= title
  link(rel='stylesheet' href='/stylesheets/bootstrap.min.css' type='text/css')
  script(type='text/javascript' src='javascripts/popper.min.js')
  script(type='text/javascript' src='javascripts/bootstrap.min.js')
  style.
    .gradient-custom {
    display: block;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #6FB98F;
    }

    .blue-black{
    background-color:#021C1E;
    }
    .cadet-blue{
    background-color: #004445;
    }
.gradient-custom
.container
  section.vh-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-12.col-md-8.col-lg-6.col-xl-5
        .card.cadet-blue.text-white(style='border-radius: 1rem;')
          .card-body.p-5.text-center
            form(name='form1' action="/register/registration" method="post" onsubmit='validateEmail(event)')
              .mb-md-5
                h2.fw-bold.mb-1.text-uppercase Sign Up
                p.text-white-50.mb-2.pb-lg-2 Enter your details to Sign Up
                .dropdown
                  label(for='salutation') Select salutation:
                  select.btn.btn-secondary.cadet-blue.dropdown-toggle.mb-1(type='button' name='salutation' required='')
                    option(value='Dr.') Dr.
                    option(value='Mr.') Mr.
                    option(value='Mrs.') Mrs.
                    option(value='Miss') Miss
                .form-floating.form-white.mb-3
                  input#user_fname.form-control.form-control-lg(type='text' name='fname' placeholder='First name' required='')
                  label.form-label(for='user_fname') First name
                .form-floating.form-white.mb-3
                  input#user_lname.form-control.form-control-lg(type='text' name='lname' placeholder='Last name')
                  label.form-label(for='user_lname') Last name
                .form-floating.form-white.mb-3
                  input#user_email.form-control.form-control-lg(type='text' name='mail' placeholder='name@example.com' required='')
                  label.form-label(for='user_email') E-mail
                .form-floating.form-white.mb-3
                  input#user_password.form-control.form-control-lg(type='password' name='password' placeholder='password' required='')
                  label.form-label(for='user_password') Password
                .form-floating.form-white.mb-3
                  input#user_password_2.form-control.form-control-lg(type='password' placeholder='password' required='')
                  label.form-label(for='user_password_2') Re-enter Password
                button.btn.btn-outline-light.btn-lg.px-5(type='submit') Sign Up
script.
  function validateEmail(e) {
  const user_email = document.form1.user_email;
  var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
  if(document.form1.user_password.value != document.form1.user_password_2.value){
  alert("Passwords entered do not match");
  user_password.focus();
  e.preventDefault();
  }
  if (user_email.value.match(mailformat)) {
  alert("Valid email address!");
  user_email.focus();
  return true;
  }
  else {
  alert("You have entered an invalid email address!");
  user_email.focus();
  e.preventDefault();
  return false;
  }
  }
